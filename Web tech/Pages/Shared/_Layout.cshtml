<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web_tech</title>
    <style>

        html, body {
            overflow-x: hidden;
            height: 100%;
        }

        body {
            background: rgb(0,14,255);
background: linear-gradient(152deg, rgba(0,14,255,1) 0%, rgba(70,255,247,1) 100%);
            padding: 0;
            margin: 0;
            font-family: 'Varela Round', sans-serif;
        }

        .header {
            display: block;
            margin: 0 auto;
            width: 100%;
            max-width: 100%;
            box-shadow: none;
            
            position: fixed;
            height: 60px !important;
            overflow: hidden;
            z-index: 10;
        }

        .headerInner {
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 100%;
            padding: 0 20px;
            color: #fff;
        }

        .headerTitle {
            font-size: 18px;
            font-weight: bold;
            text-transform: uppercase;
        }

        .headerLinks a {
            color: #fff;
            text-decoration: none;
            padding: 0 10px;
            transition: color 0.3s;
        }

            .headerLinks a:hover {
                color: #fff;
            }

        .headerAction {
            font-size: 18px;
            font-weight: bold;
            color: #fff;
        }

            .headerAction:hover {
                background-color: #fff;
                color: #222;
                cursor: pointer;
            }



        .main {
            margin: 0 auto;
            display: block;
            height: 100%;
            margin-top: 60px;
        }

        .mainInner {
            display: table;
            height: 100%;
            width: 100%;
            text-align: center;
        }

            .mainInner div {
                display: table-cell;
                vertical-align: middle;
                font-size: 3em;
                font-weight: bold;
                letter-spacing: 1.25px;
            }

    </style>
</head>
<body>

    <div class="header">
        <div class="headerInner">
            <div class="headerTitle">Create Exam Paper</div>
            <div class="headerLinks">
                <a href="index4">Homepage</a>
                <a href="CreateQuestionPages">Create question</a>
                <a href="profilepage">Profile</a>
                <a href="contactus">Contact Us</a>
            </div>
            
        </div>
    </div>
<div>
        @RenderBody()
</div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>