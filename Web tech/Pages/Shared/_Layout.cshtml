

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web_tech</title>
    <style>

        html, body {
            overflow-x: hidden;
            height: 100%;
        }
        body::-webkit-scrollbar{
            display:none;
        }
        body {
            background: rgb(0,14,255);
            background: linear-gradient(152deg, rgba(0,14,255,1) 0%, rgba(70,255,247,1) 100%);
            padding: 0;
            margin: 0;
            font-family: 'Varela Round', sans-serif;

        }

        .header {
            display: block;
            margin: 0 auto;
            width: 100%;
            max-width: 100%;
            box-shadow: none;
            height:60px;
            position: fixed;
            height: 60px !important;
            overflow: hidden;
            z-index: 10;
             background: rgba(255, 255, 255, 0.24);
    
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(7.6px);
    -webkit-backdrop-filter: blur(7.6px);
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);

        }

        .headerInner {
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 100%;
            padding: 0 20px;
            color: #fff;
        }

        .headerTitle {
            font-size: 18px;
            font-weight: bold;
            text-transform: uppercase;
        }

        .headerLinks a {
            color: #fff;
            text-decoration: none;
            padding: 0 10px;
            transition: color 0.3s;
        }

            .headerLinks a:hover {
                color: #fff;
            }

        .headerAction {
            font-size: 18px;
            font-weight: bold;
            color: #fff;
        }

            .headerAction:hover {
                background-color: #fff;
                color: #222;
                cursor: pointer;
            }



        .main {
            margin: 0 auto;
            display: block;
            height: 100%;
            margin-top: 60px;
        }

        .mainInner {
            display: table;
            height: 100%;
            width: 100%;
            text-align: center;
        }

            .mainInner div {
                display: table-cell;
                vertical-align: middle;
                font-size: 3em;
                font-weight: bold;
                letter-spacing: 1.25px;
            }

        .nav-menu__link {
            color: white;
            position: relative;
        }

            .nav-menu__link:hover {
                color: blueviolet;
            }

            .nav-menu__link::before, .nav-menu__link::after {
                content: '';
                position: absolute;
                left: 0;
                width: 100%;
                height: 2px;
                background-color: antiquewhite;
                transform: scaleX(0);
                transition: all 0.5s;
                transform-origin: left;
            }

            .nav-menu__link::before {
                top: -10px;
            }

            .nav-menu__link::after {
                transform-origin: right;
                bottom: -10px;
            }

            .nav-menu__link:hover {
                color: white;
                font-weight: bold;
            }

                .nav-menu__link:hover::before, .nav-menu__link:hover::after {
                    color: #fff;
                    transform: scaleX(1);
                }
    </style>
</head>
<body>

    <div class="header">
        <div class="headerInner">
            <div class="headerTitle">Create Exam Paper</div>
            <div class="headerLinks">
                <a href="index4" class="nav-menu__link">Homepage</a>
                <a href="CreateQuestionPages" class="nav-menu__link">Create question</a>
                <a href="profilepage" class="nav-menu__link" >Profile</a>
                <a href="contactus" class="nav-menu__link">Contact Us</a>
               <!--@Html.Partial("_LoginPartial")-->
                
            </div>

        </div>
    </div>
<div>
        @RenderBody()
</div>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>